<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" 
    version="2.0">
    <persistence-unit name="planit" transaction-type="JTA"  > 
    
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <jta-data-source>jdbc/planit</jta-data-source>
        
        <class>com.jthompson.music.domain.Event</class>
        <class>com.jthompson.music.domain.Resource</class>
        <class>com.jthompson.music.domain.Schedulable</class>
        
        <class></class>
        
        <properties>
        	<property name="hibernate.hbm2ddl.auto" value="update"/>
        	<property name="hibernate.show_sql" value="true"/>
        	<property name="hibernate.format_sql" value="true"/>
        	<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
        </properties> 
        
    </persistence-unit>
</persistence> 